{
  "name": "one-line-vscode",
  "displayName": "One-Line",
  "description": "Combine multiple terminal commands into single named shortcuts",
  "version": "1.0.0",
  "publisher": "mykytagrogul",
  "author": "Mykyta Grogul",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mykyta-G/One-Line.git",
    "directory": "packages/vscode"
  },
  "homepage": "https://github.com/Mykyta-G/One-Line#readme",
  "bugs": {
    "url": "https://github.com/Mykyta-G/One-Line/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "one-line.runCommand",
        "title": "One-Line: Run Command",
        "icon": "$(play)"
      },
      {
        "command": "one-line.addCommand",
        "title": "One-Line: Add New Command",
        "icon": "$(add)"
      },
      {
        "command": "one-line.deleteCommand",
        "title": "One-Line: Delete Command",
        "icon": "$(trash)"
      },
      {
        "command": "one-line.editCommand",
        "title": "One-Line: Edit Command",
        "icon": "$(edit)"
      },
      {
        "command": "one-line.refreshCommands",
        "title": "One-Line: Refresh Commands",
        "icon": "$(refresh)"
      },
      {
        "command": "one-line.runCommandFromTree",
        "title": "Run",
        "icon": "$(play)"
      },
      {
        "command": "one-line.editCommandFromTree",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "one-line.deleteCommandFromTree",
        "title": "Delete",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "one-line-explorer",
          "title": "One-Line",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "one-line-explorer": [
        {
          "id": "one-line-commands",
          "name": "Commands"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "one-line.addCommand",
          "when": "view == one-line-commands",
          "group": "navigation"
        },
        {
          "command": "one-line.refreshCommands",
          "when": "view == one-line-commands",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "one-line.runCommandFromTree",
          "when": "view == one-line-commands && viewItem == command",
          "group": "inline"
        },
        {
          "command": "one-line.editCommandFromTree",
          "when": "view == one-line-commands && viewItem == command",
          "group": "1_modify"
        },
        {
          "command": "one-line.deleteCommandFromTree",
          "when": "view == one-line-commands && viewItem == command",
          "group": "2_danger"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "package": "vsce package",
    "test": "echo \"Tests not yet implemented\""
  },
  "dependencies": {
    "@one-line/core": "^1.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0"
  }
}

